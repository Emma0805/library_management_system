        <servlet-class>servlet.Update</servlet-class>
    </servlet>
    <servlet>
    <servlet-name>Checkout</servlet-name>
        <servlet-class>servlet.Checkout</servlet-class>
    </servlet>
    <servlet>
    <servlet-name>ListAllUser</servlet-name>
        <servlet-class>servlet.ListAllUser</servlet-class>
    </servlet>
    <servlet>
