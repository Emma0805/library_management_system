        <url-pattern>/Checkout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListAllUser</servlet-name>
        <url-pattern>/ListAllUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListStuAndParents</servlet-name>
